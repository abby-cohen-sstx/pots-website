---
import BaseLayout from "./BaseLayout.astro";
import PageNavigation from '../components/PageHeader/PageNavigation.astro';
import ExpandFootnotes from '../components/PageHeader/ExpandFootnotes.astro';
import LinkShareButtons from '../components/PageHeader/LinkShareButtons.astro';


const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="markdownMainContainer">
        <header>
            <div class="bodyPadding">
                <PageNavigation />

                <h1>{frontmatter.header}</h1>
                <h2>{frontmatter.subheader}</h2>
                <div class="headerButtonsContainer">
                    <ExpandFootnotes />
                    <div></div>
                    <div>
                        <LinkShareButtons />
                    </div>
                </div>
            </div>

            <hr class="heavy-hr">
            
        </header>
    <slot />
    </div>
</BaseLayout>

<style>
    h1 {

    }

    h2 {
        font-weight: normal;
    }

    .bodyPadding {
        padding: 0px 20px;
    }


    .light-hr {
        width: 100%;
        height: 1px;
        border-width: 0;
        background-color: rgb(192, 192, 192);
        margin: 20px 0px;
    }

    .heavy-hr {
        width: 100%;
        height: 1px;
        border-width: 0;
        background-color: rgb(63, 63, 63);
        margin: 20px 0px;
    }

    .markdownMainContainer {
        width: 100%;
        max-width: 900px;

        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .markdownMainContainer header {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .markdownMainContainer * {
        text-align: left;
    }

    .headerButtonsContainer {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin-top: 40px;
    }

</style>

